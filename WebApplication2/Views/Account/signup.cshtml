
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>signup</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <div > 
        <div class="card" style="background-color:lightblue; width: 400px; height: 600px; border: 1px solid yellow; position:absolute; top:0px;bottom:0px;right:0px;left:0px;margin:auto">
            <div class="card-header">
                <h1> Registration</h1>
            </div>
            <div class="card-body">
                <form class="container">
                    <div class="input-group mb-3">
                        <input class="form-control w-100" type="text" placeholder="Full Name" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                 <i class="bi bi-person-circle"></i>
                            </div>                       
                        </div>
                       
                    </div>
                    <div class="input-group mb-3">
                        <input class="form-control" type="email" placeholder="Email" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <i class="bi bi-envelope-at-fill"></i>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input class="form-control" type="password" placeholder="Password" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <i class="bi bi-file-lock-fill"></i>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input class="form-control" type="password" placeholder="Confirm_Password" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <i class="bi bi-file-check-fill"></i>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3 ">
                        <input class="form-check-input" type="checkbox"/>
                        <label class="form-check-label mx-2">I agree</label>
                      
                    </div>
                    <div style="width:100%">
                        <input style="width:100%" class="btn btn-primary btn-block" type="submit" value="Save" />
                    </div>
                </form>

            </div>
        </div>
       
      
    </div>
</body>
</html>
