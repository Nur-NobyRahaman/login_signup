
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>login</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div style="background-color:lightblue; width: 400px; height: 600px; border: 1px solid yellow; position:absolute; top:0px;bottom:0px;right:0px;left:0px;margin:auto"> 
        <div class="content">
            <div class="row py-5">
                <div class="col col-sm-12">
                    <h2 class="text-center">Login</h2>
                </div>
            </div>
            <div class="row ">
                <div class="col col-sm-2">
                </div>
                <div class="col col-sm-8">
                    <label> User Name</label>
                </div>
                <div class="col col-sm-2">
                </div>
            </div>
            <div class="row ">

                <div class="col col-sm-2">
                </div>
                <div class="col col-sm-8">
                    <input class="w-100" type="email" placeholder="Enter your email" />
                </div>
                <div class="col col-sm-2">
                </div>
            </div>
            <div class="row ">
                <div class="col col-sm-2">
                </div>
                <div class="col col-sm-8">
                    <label> Password</label>
                </div>
                <div class="col col-sm-2">
                </div>
            </div>
            <div class="row">
                <div class="col col-sm-2">
                </div>
                <div class="col col-sm-8">
                    <input class="w-100" type="password" placeholder="Enter your password"/>
                </div>
                <div class="col col-sm-2">
                </div>
            </div>
            <div class="row ">
                <div class="col col-sm-2">
                </div>
                <div class="col col-sm-8 pt-2">
                    <input class="w-100" type="button" value="Login" />
                </div>
                <div class="col col-sm-2">

                </div>
            </div>
            
        </div>
        
    </div>
</body>
</html>
